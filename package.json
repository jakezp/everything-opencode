{
  "name": "everything-opencode",
  "version": "0.1.6",
  "description": "Complete OpenCode configuration - agents, skills, hooks, commands, rules. Battle-tested patterns from everything-claude-code adapted for OpenCode.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "everything-opencode": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "agents",
    "commands",
    "skills",
    "rules",
    "contexts"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && bun build src/cli/index.ts --outdir dist/cli --target bun --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "check:ci": "biome check .",
    "dev": "bun run build && opencode --plugin ./dist/index.js"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.0",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "opencode",
    "plugin",
    "agents",
    "skills",
    "hooks",
    "claude-code",
    "ai-coding"
  ],
  "author": "JakezP",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakezp/everything-opencode.git"
  },
  "bugs": {
    "url": "https://github.com/jakezp/everything-opencode/issues"
  },
  "homepage": "https://github.com/jakezp/everything-opencode#readme"
}
